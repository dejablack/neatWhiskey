//----------------------------------*\
// Header Globas
//----------------------------------*/
////-------------------*\
//// Tranz
////-------------------*/

$navTraz = all .25s ease-in-sine;


//----------------------------------*\
// Header
//----------------------------------*/
.headerDesktop
	position: fixed;
	z-index: 1000;
	width: 100%;
	height: 80px;
	background-color: $c1;
	color: white;
	+below(2)
		display: none

.headerShadow
	height: 10px;
	width: 100%;
	position: absolute;
	bottom: -10px;
	background-image: url("../images/parallax_shadow_top.png");




//----------------------------------*\
// Page Indicator
//----------------------------------*/

////-------------------*\
//// Wrapper
////-------------------*/
.headerTitle
	position: absolute;
	left: 50px;
	top: 20px;
	width: 340px;
	height: 40px;
	border: solid 1px white;
	border-radius: 3px; 

	
////-------------------*\
//// Creativo Title
////-------------------*/
.creativo 
	h1
		@extend .pf2;
		@extend .reset;
		text-transform: uppercase;
		letter-spacing: 17px;
		padding-top: 3px;
		padding-left: 14px;
		font-size: 30px;
		cursor: pointer;
		a
			text-decoration: none;
			color: white;
	+below(2)
		display: none

////-------------------*\
//// Head Divider
////-------------------*/
.headDivide
	@extend .reset;
	border-right: solid 1px white;
	width: 280px;
	height: 38px;


////-------------------*\
//// Page Indicator
////-------------------*/
.page
	position: absolute;
	top: -5px;
	left: 225px;
	display: inline-block;
	width: 125px;
	height: 50px;
	overflow: hidden;
	ul
		list-style: none;
		position: absolute;
	ul li
		height: 50px; 
	+below(2)
		display: none

////-------------------*\
//// Header Icon Styles
////-------------------*/
#homeHeadIcon
	margin-top: 18px;
	left: 55px;
	font-size: 42px;
#abouHeadIcon
	margin-top: 20px;
	left: 55px;
	font-size: 36px;
#processHeadIcon
	margin-top: 20px;
	left: 58px;
	font-size: 36px;
#contactHeadIcon
	margin-top: 20px;
	left: 58px;
	font-size: 36px;


//----------------------------------*\
// Nav
//----------------------------------*/

nav
	border: solid 1px white;
	position: absolute;
	right: 50px;
	top: 25px;
	border-radius: 3px; 
		li
			transition: background .25s $tz1, color .25s $tz1;
			float: left;
			width: 85px;
			height: 31px;
			padding-top: 5px; 
			text-align: center
			border-right: solid 1px white;
			&:last-child
				border-right: solid 0px white;
			&:hover
				transition: $navTraz;
				cursor: pointer
				background: white
				a
					color: gray;

			a
				@extend .pf2;
				color: white;
				text-decoration: none;


