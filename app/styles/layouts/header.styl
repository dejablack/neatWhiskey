//----------------------------------*\
// Header Globas
//----------------------------------*/
////-------------------*\
//// Tranz
////-------------------*/

$navTraz = all .25s ease-in-sine;


//----------------------------------*\
// Header
//----------------------------------*/
.header
	position: fixed;
	z-index: 1000;
	width: 100%;
	height: 100px;
	background-color: black;
	color: white;


//----------------------------------*\
// Page Indicator
//----------------------------------*/

////-------------------*\
//// Wrapper
////-------------------*/
.headerTitle
	position: absolute;
	left: 50px;
	top: 30px;
	width: 340px;
	height: 40px;
	border: solid 1px white;
	border-radius: 3px; 

	
////-------------------*\
//// Creativo Title
////-------------------*/
.creativo 
	h1
		@extend .pf2;
		@extend .reset;
		text-transform: uppercase;
		letter-spacing: 17px;
		padding-top: 3px;
		padding-left: 14px;
		font-size: 30px;
		cursor: pointer;
		a
			text-decoration: none;
			color: white; 

////-------------------*\
//// Head Divider
////-------------------*/
.headDivide
	@extend .reset;
	border-right: solid 1px white;
	width: 280px;
	height: 38px;


////-------------------*\
//// Page Indicator
////-------------------*/
.page
	position: absolute;
	top: -5px;
	left: 225px;
	display: inline-block;
	width: 400px;
	height: 30px;
	overflow: hidden;
	ul
		list-style: none;
		position: absolute;
	ul li
		margin-top: 18px;
		height: 50px;
		left: 50px;
		font-size: 24px;


//----------------------------------*\
// Nav
//----------------------------------*/

nav
	border: solid 1px white;
	position: absolute;
	right: 50px;
	top: 35px;
	border-radius: 3px; 
		li
			transition: background .25s $tz1, color .25s $tz1;
			float: left;
			width: 85px;
			height: 31px;
			padding-top: 5px; 
			text-align: center
			border-right: solid 1px white;
			&:last-child
				border-right: solid 0px white;
			&:hover
				transition: $navTraz;
				cursor: pointer
				background: white
				a
					color: gray;

			a
				@extend .pf2;
				color: white;
				text-decoration: none;





//----------------------------------*\
// Mobile Nav
//----------------------------------*/
.slicknav_menu 
	display:none;
+below(2)
	.js #menu
		display:none;
	.js .slicknav_menu
		display:block;