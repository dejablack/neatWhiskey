/* pressButton - these styles are the good stuff */
.pressButton {
  background-color: #999;
  background-image: -webkit-linear-gradient(rgba(255,255,255,0.05), rgba(0,0,0,0.1));
  background-image: -moz-linear-gradient(rgba(255,255,255,0.05), rgba(0,0,0,0.1));
  background-image: -ms-linear-gradient(rgba(255,255,255,0.05), rgba(0,0,0,0.1));
  background-image: -o-linear-gradient(rgba(255,255,255,0.05), rgba(0,0,0,0.1));
  background-image: linear-gradient(rgba(255,255,255,0.05), rgba(0,0,0,0.1));
  border: none;
  border-radius: 0.5em;
  box-shadow: inset 0 0 0 1px rgba(0,0,0,0.2), inset 0 2px 0 rgba(255,255,255,0.1), inset 0 1.2em 0 rgba(255,255,255,0.1), inset 0 -0.2em 0 rgba(255,255,255,0.1), inset 0 -0.25em 0 rgba(0,0,0,0.25), 0 0.25em 0.25em rgba(0,0,0,0.05);
  color: #444;
  cursor: pointer;
  display: inline-block;
  font-family: sans-serif;
  font-size: 1em;
  font-weight: bold;
  line-height: 1.5;
  margin: 0 0.5em 1em;
  padding: 0.5em 1.5em 0.75em;
  position: relative;
  text-decoration: none;
  text-shadow: 0 1px 1px rgba(255,255,255,0.25);
  vertical-align: middle;
}
.pressButton:hover {
  outline: none;
}
.pressButton:hover,
.pressButton:focus {
  box-shadow: inset 0 0 0 1px rgba(0,0,0,0.2), inset 0 2px 0 rgba(255,255,255,0.1), inset 0 1.2em 0 rgba(255,255,255,0.1), inset 0 -0.2em 0 rgba(255,255,255,0.1), inset 0 -0.25em 0 rgba(0,0,0,0.25), inset 0 0 0 3em rgba(255,255,255,0.2), 0 0.25em 0.25em rgba(0,0,0,0.05);
}
.pressButton:active {
  box-shadow: inset 0 0 0 1px rgba(0,0,0,0.2), inset 0 2px 0 rgba(255,255,255,0.1), inset 0 1.2em 0 rgba(255,255,255,0.1), inset 0 0 0 3em rgba(255,255,255,0.2), inset 0 0.25em 0.5em rgba(0,0,0,0.05), 0 -1px 1px rgba(0,0,0,0.1), 0 1px 1px rgba(255,255,255,0.25);
  margin-top: 0.25em;
  outline: none;
  padding-bottom: 0.5em;
}
/* Light Text */
.lightText {
  box-shadow: inset 0 0 0 1px rgba(0,0,0,0.25), inset 0 2px 0 rgba(255,255,255,0.1), inset 0 1.2em 0 rgba(255,255,255,0.05), inset 0 -0.2em 0 rgba(255,255,255,0.1), inset 0 -0.25em 0 rgba(0,0,0,0.5), 0 0.25em 0.25em rgba(0,0,0,0.1);
  color: #fff;
  text-shadow: 0 -1px 1px rgba(0,0,0,0.25);
}
.lightText:hover,
.lightText:focus {
  box-shadow: inset 0 0 0 1px rgba(0,0,0,0.25), inset 0 2px 0 rgba(255,255,255,0.1), inset 0 1.2em 0 rgba(255,255,255,0.05), inset 0 -0.2em 0 rgba(255,255,255,0.1), inset 0 -0.25em 0 rgba(0,0,0,0.5), inset 0 0 0 3em rgba(255,255,255,0.2), 0 0.25em 0.25em rgba(0,0,0,0.1);
}
.lightText:active {
  box-shadow: inset 0 0 0 1px rgba(0,0,0,0.25), inset 0 2px 0 rgba(255,255,255,0.1), inset 0 1.2em 0 rgba(255,255,255,0.05), inset 0 0 0 3em rgba(255,255,255,0.2), inset 0 0.25em 0.5em rgba(0,0,0,0.05), 0 -1px 1px rgba(0,0,0,0.1), 0 1px 1px rgba(255,255,255,0.25);
}
