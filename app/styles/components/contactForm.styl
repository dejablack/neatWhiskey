
//----------------------------------*\
// Global
//----------------------------------*/
body
	background: linear-gradient(top, red, green, blue)
fieldset
	background: #f4d03f;
	border: 1px solid #ddd;
	margin: 0 0 .75em;
	padding: 1.5em
	border-radius: 45px; 
	margin-top: 50px;
	
	min-height: 200px

#desktopForm
	::-webkit-input-placeholder
		color: lighten(#444, 15); 
	:focus::-webkit-input-placeholder
		text-indent: -999px
	::-moz-placeholder
		color: #ccc;
		font-style:italic;
	:focus::-moz-placeholder
		text-indent: -999px

////-------------------*\
//// Colors
////-------------------*/

$contactTitleCo = #373737;
$inputPCo = rgba(255,255,255,.8);

//----------------------------------*\
// Form Styles
//----------------------------------*/
////-------------------*\
//// Title Button
////-------------------*/

#desktopForm
	.contactTitle
		//align(direction =  horizontal)
		background: $contactTitleCo;
		text-align: center;
		color: white;
		font-size: 2.5em;
		padding: 15px;
		border-radius: 10px;
		border: 5px solid darken($contactTitleCo, 5)


////-------------------*\
//// Input Styles
////-------------------*/
	.formWrap
		margin-top: 150px;

		.formName
			col(1/3)
			shift(1/6)
			label
				stack()
				@extend .sf1;
				transition: all 0.45s ease-out-sine;
				margin-bottom: 10px;
				text-align: center;
				font-size: 2em;
				letter-spacing: 2px;
			.focus
				col(1/3)
				transition: all 0.45s ease-out-sine;
				background: darken($contactTitleCo, 5);
				border-radius: 8px;
				padding: 5px;
				color: white;
				text-align-last: center;
				margin-bottom: 0px;
				//border: 5px solid darken($contactTitleCo, 5) 
			input
				stack()
				transition: all 0.45s ease-out-sine;
				border: 2px solid #ddd;
				text-align: center;
				font-size: 2em;
				border-radius: 2px;
				background: $inputPCo;
				color:  #444;
				padding: 5px;
				&:focus
					transition: all 0.45s ease-out-sine;
					border: 5px solid darken($contactTitleCo, 5)
					background: #444;
					color: lighten(#444, 55);
					font-size: 2.5em;
					background: #444;
					border-radius: 8px; 
					margin-bottom: 50px;
					text-align: left;
