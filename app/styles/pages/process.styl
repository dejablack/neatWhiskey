

//----------------------------------*\
// Global
//----------------------------------*/

#process
	cf()
	background: $c3;
	//min-height: 2100px;
	section
		center(max-width = 1410px)
		cf()
		margin-top: 40px;
	article
		center(max-width = 1220px)
		cf()
		margin-bottom: 105px; 
////-------------------*\
//// Color
////-------------------*/

$darkO = #cc7614;
$iconR = lighten(#c0392b, 6);
$arrowR = lighten(#c0392b, 6);

////-------------------*\
//// Reg Arrow
////-------------------*/
.dArrow
	//margin: auto 20px;
	height: 40px; 
	border-style: solid;
	border-width: 50px 50px 0 50px;
	border-color: $arrowR transparent transparent transparent;


////-------------------*\
//// Break Arrow
////-------------------*/
.pBreak
	col(8/9)
	shift(1/18)
	height: 0;
	border-style: solid;
	border-width: 20px 20px 0 15px;
	border-color: $darkO transparent transparent transparent;		


//----------------------------------*\
// Title
//----------------------------------*/

#process
	overflow: hidden; 
	.processTitle
		h1
			@extend .pf2;
			@extend .reset;
			color: $g1; 
			font-size: 8em;
			text-align: center;
			+below(2)
				font-size: 4em
	.processDisc
		col(7.9/9)
		shift(1.1/18)
		h2
			@extend .pf1;
			color: #7E4D15;
			text-align: center
			font-size: 2em;
			+below(2)
				font-size: 1.5em; 
	////-------------------*\
	//// Text Arrow Container
	////-------------------*/
	.pTopBreak
		@extend .pBreak;
		border-width: 0 20px 20px 20px;
		border-color: transparent transparent $darkO transparent;
	.pBottomBreak
		@extend .pBreak;


//----------------------------------*\
// Grid Process
//----------------------------------*/

.process1
	col(1/2, uncycle: 3, cycle: 2)
	+below(2)
		stack()
	margin-top: 25px;
	.icon
		color: $iconR;
		text-align: center
		font-size: 8em;
		.processBoxTitle
			uppercase()
			margin-top: -15px; 
			font-size: .15em;
			color: $g1;
	.downArrowWrap
		padding: 0px;
		margin: 0px; 
		margin: 0 auto;
		width: 100px;
		//span(1/2 1/4, uncycle: 2)
		//shift(1/3)
		.downArrow
			@extend .dArrow;
			margin-bottom: 20px;
			margin-top: -10px;
			+below(2)
				margin-bottom: -20px;
				margin-top: 0px;
	.pDescript
		col(1)
		background: rgba(210, 70, 55, 0.90);
		box-shadow: 0px 3px 10px 0px rgba(50, 50, 50, 0.68);
		border-radius: 4px;
		padding-bottom: 15px; 
		.numberBox
			span(1/12)
			h2
				@extend .sf1;
				padding: 5px;
				font-size: 4em;
				margin-left: 5px;
				margin-top: 5px; 
				text-align: center;
				background: $c3;
				color: #444;
				border-radius: 3px;
				+below(2)
					display: none;
		.descriptBox
			@extend .pf2;
			height: 100%;
			padding: 15px;
			text-align: center;
			color: $g1;
			font-size: 1.3em;
			+below(2)
				background: rgba(210, 70, 55, 0.74);
			p 
				span(11/12)
				+below(2)
					@extend .reset;
					col(1)
					text-align: center;


.process2
	@extend .process1;
	.downArrow
		@extend .dArrow;
	h2
		@extend .sf1;
	.descriptBox
		@extend .pf2;

.process3
	@extend .process1;
	.downArrow
		@extend .dArrow;
	h2
		@extend .sf1;
	.descriptBox
		@extend .pf2;

.process4
	@extend .process1;
	.downArrow
		@extend .dArrow;
	h2
		@extend .sf1;
	.descriptBox
		@extend .pf2;

.process5
	@extend .process1;
		col(1, uncycle: 2, cycle: 1)
		unshift()
		.downArrowWrap
			width: 160px;
			+below(2)
				width: 100px;
			.downArrow
				width: 50px;
				@extend .dArrow;
					border-width: 80px 80px 0 80px;
					//margin: auto 60px;
					+below(2)
						border-width: 50px 50px 0 50px;
		h2
			@extend .sf1;
		.descriptBox
			@extend .pf2;
	#flowProcessProduct
		span(1)