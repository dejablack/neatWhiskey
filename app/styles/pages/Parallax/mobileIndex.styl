
//----------------------------------*\
// Mobile Index
//----------------------------------*/
////-------------------*\
//// Global
////-------------------*/
section#mobileSpash
	display: none
	cf()
	background: $c1;
	// padding-bottom: 25px;
	+below(2)
		display: block


#mobileSplashLogo
	@extend .reset;
	@extend .pf2;
	//uppercase()
	padding-top: 50px;
	margin-bottom: 20px; 
	margin-top: 10px;
	text-align: center;
	color: white;
	
.mobileTopBreak
	col(1/2)
	shift(1/4)
	height: 2px
	background: white;
	margin-bottom: 20px;
	box-shadow: 0px 2px 5px 0px rgba(50, 50, 50, 0.75);
.mobileBottomBreak
	col(1/1.3)
	shift(1/11)
	height: 2px
	background: white;
	margin-top: 20px; 
	box-shadow: 0px 2px 5px 0px rgba(50, 50, 50, 0.75);

////-------------------*\
//// Icons
////-------------------*/

.mobileFrendily
	span(1/2)
	@extend .sf1;
	color: darken($g2, 3); 
	text-align: center;
	font-size: 1.5em; 		
.mobileSuitable
	@extend .mobileFrendily;
.mobileProfessional
	@extend .mobileFrendily;
		span(1)
		text-align: center

////-------------------*\
//// Disc
////-------------------*/

.mobileSplashDisc
	h2
		col(1)
		@extend .pf2;
		color:white;
		text-align: center
		padding-top: 15px;
		padding-bottom: 15px;

	.boxDisc
		h1
			col(1)
			@extend .reset;
			@extend .sf1;
			uppercase()
			text-align: center
			font-size: 4em;
			letter-spacing: 2px;
			color: darken($g2, 3) ; 
			//text-shadow: 1px 1px 1px rgba(0, 0, 0, 1);