//----------------------------------*\
// PX1
//----------------------------------*/

#aboutPX1

	#parallaxPX1
		margin-bottom: 0px;
		position: relative;
		overflow: hidden;
		+below(2)
			display: none;
		#big
			margin-top: -35px; 
			letter-spacing: 20px;

	#parallaxPX1 h3
		@extend .sf1;
		color: $c2;
		font-size: 90px;
		text-align: center;
		margin: 30px 0 0 0;
		position: absolute;
		top: 50%;
		width: 100%;
		line-height: 80px;
		opacity: .85;
		+below(2)
			display: none;


	#parallaxPX1 #parallaxBGPX1
		position: relative;
		height: 300px;
		width: 100%;
		background-image: url("../images/px1GC.jpg");
		+below(2)
			display: none;

	#parallaxBGPX1
		background-size: cover; 
		background-position:0 100% ;
		+below(2)
			display: none;

	#parallaxBGPX1 .top
		height: 10px;
		width: 100%;
		position: absolute;
		top: 0;
		background-image: url("../images/parallax_shadow_top.png");
		+below(2)
			display: none;		

	#parallaxBGPX1 .bottom 
		height: 10px;
		width: 100%;
		position: absolute;
		bottom: 0;
		background-image: url("../images/parallax_shadow_bottom.png");
		+below(2)
			display: none;

	////-------------------*\
	//// Mobile Styles
	////-------------------*/

	.mobilePX1Shadow
		display: none;
		+below(2)
			display: block;
			background: $g2;
		.top
			height: 10px;
			width: 100%;
			top: 0;
			background-image: url("../images/parallax_shadow_top.png");
		.bottom
			height: 10px;
			width: 100%;
			bottom: 0;
			background-image: url("../images/parallax_shadow_bottom.png");

	.mobilePX1
		+below(2)
			background: $g2;
			min-height: 110px;

			h1
				@extend .reset;
				@extend .sf1;
				padding-top: 20px;
				padding-bottom: 30px;
				text-shadow: $textShadow;
				text-align: center;
				color: $c2;
				letter-spacing: 18px;



