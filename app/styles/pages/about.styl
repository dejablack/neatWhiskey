//----------------------------------*\
// Global
//----------------------------------*/

#about
	background: $c2;
	width: 100%;
	min-height: 1250px;


	section
		center(max-width = 1410px);

////-------------------*\
//// Text Color
////-------------------*/
$atc = rgba(30,74,107,.86);
$darkG = #295;

//----------------------------------*\
// Title
//----------------------------------*/

#about
	section
		h2.aboutTitle1
			@extend .pf1;
			color: $atc;
			font-size: 8em; 
			margin-top: 50px;
			margin-bottom: 25px;
			text-align: center;
		////-------------------*\
		//// Title2 Box
		////-------------------*/
		.darkenBox
			background: #295;
			width: 750px;
			margin: 0 auto;
			border-radius: 8px;
		h3.aboutTitle2
			@extend .pf3;
			font-size: 7em; 
			color: $atc;
			text-align: center;
			padding: 35px;
			padding-bottom: 50px;
		h2.aboutTitle3
			@extend .pf1;
			color: $atc;
			font-size: 8em; 
			margin-top: 20px;
			margin-bottom: 25px;
			text-align: center;

//----------------------------------*\
// Wrapper for icon and info
//----------------------------------*/


#aboutBottomWrap
	cf();
	padding-top: 25px;
	padding-bottom: 25px;
	border-top: 15px solid $darkG;
	border-bottom: 15px solid $darkG;


//----------------------------------*\
// Icons
//----------------------------------*/

aside.aboutIconWrap
	center(max-width = 1410px);

.visualID
	col(1/4)
	@extend .sf1;
	color: $atc;
	font-size: 3em;
	text-align: center;
	.aIcon
		font-size: 2.5em;
		margin-bottom: 10px;
		color: white;

.webDesign
	@extend .visualID;

.mobileDesign
	@extend .visualID;

.development
	@extend .visualID;


//----------------------------------*\
// Tabs
//----------------------------------*/

article.aboutTabWrap
	center(max-width = 1210px)

.tab
	margin-top: 75px; 
	margin-bottom: 20px;
	position: relative;
	overflow: hidden;
	line-height: 1.5;
	color: white;
	-webkit-font-smoothing: antialiased;

.tabs
	display: table;
	position: relative;
	overflow: hidden;
	margin: 0;
	width: 100%;
	li
		float: left;
		line-height: 38px;
		overflow: hidden;
		padding: 0;
		position: relative;
	a 
		@extend .pf3;
		font-size: 1.5em; 
		background-color: $c2;
		border-bottom: 4px solid white;
		color: $atc;
		display: block;
		letter-spacing: 0;
		outline: none;
		padding: 0 20px;
		text-decoration: none;
		-webkit-transition: all 0.2s ease-in-out;
		-moz-transition: all 0.2s ease-in-out;
		transition: all 0.2s ease-in-out;
		border-bottom: 2px solid $green;

.current a 
	color: $c2;
	background: white;

.tab_content
	border-top-right-radius: 10px;
	border-bottom-right-radius: 10px; 
	background: $darkG
	height: 200px; 


.tabs_item
	display: none;
	padding: 40px 0;
	&:first-child
		display: block;

	img
		+desktop()
			col(1/5)

	.aboutText
		col(2/5)
		h4
			@extend .pf3;
			margin-top: -10px;
			text-decoration: underline; 
			font-weight: bold;
			color: white;
			font-size: 20px;
		p
			@extend .pf2;
			@extend .reset;
			margin-top: -20px;

