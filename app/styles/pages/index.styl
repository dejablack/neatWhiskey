//----------------------------------*\
// Global for Index
//----------------------------------*/

section.splashContent
	background: $c1;
	min-height: 1050px;
	height: 100vh;

#indexWrap
	center(max-width = 1410px)



//----------------------------------*\
// Mag Index
//----------------------------------*/

#magIndex
	@extend .pf1;
	margin-top: 150px;
	color: white;
	height: 100%;
	overflow: hidden;
	#quote.split
		text-align: center;
		div
			padding: 10px; 
			@extend .pf3;

	#decoys.split
		//background: green;
		height: 550px;
			div
				padding: 10px; 
				@extend .pf2;
			
	.split
		@extend .pf1;
		-webkit-transform: translate3d(0, 0, 0);
		font-size:40px;
		line-height:36px;
		color:#dedede;
		margin:50px auto;
		width:100%;
		visibility:hidden;
	.split div
		@extend .pf1;
		border-radius:4px;
		background:#cecece;
		padding:0 8px;
		margin:4px 0;
		-webkit-font-smoothing: antialiased;
		-moz-font-smoothing:antialiased;
		color:#555;
		font-weight:bold;



